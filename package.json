{
  "name": "hackaru-desktop",
  "version": "1.4.0",
  "author": "ktmouk <ktmouk@gmail.com>",
  "description": "Hackaru for desktop",
  "private": true,
  "scripts": {
    "eslint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore",
    "stylelint": "stylelint '**/*.{vue,scss}' --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore",
    "test": "jest",
    "dev": "webpack -c src/main/webpack.dev.js --progress && run-p -l dev:*",
    "dev:main": "wait-on tcp:7865 && electron dist/main/main",
    "dev:renderer": "nuxt dev --dotenv ../../.env.development src/renderer",
    "build": "run-p -l build:* && electron-builder",
    "build:main": "webpack -c src/main/webpack.prod.js",
    "build:renderer": "nuxt generate --dotenv ../../.env.production src/renderer"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn eslint --fix",
      "yarn prettier --write"
    ],
    "*.vue": [
      "yarn eslint --fix",
      "yarn stylelint --fix",
      "yarn prettier --write"
    ],
    "*.scss": [
      "yarn stylelint --fix",
      "yarn prettier --write"
    ]
  },
  "build": {
    "productName": "Hackaru",
    "appId": "app.hackaru",
    "artifactName": "${name}-v${version}.${ext}",
    "afterSign": "scripts/notarize",
    "directories": {
      "output": "build"
    },
    "mac": {
      "icon": "icons/mac.icns"
    },
    "win": {
      "icon": "icons/win.ico"
    },
    "files": [
      "dist/**/*",
      "static/**/*"
    ],
    "extraMetadata": {
      "main": "dist/main/main.js"
    },
    "publish": {
      "provider": "github",
      "releaseType": "draft",
      "publishAutoUpdate": true
    }
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@openid/appauth": "^1.3.1",
    "@sentry/electron": "^2.5.4",
    "@sentry/integrations": "^6.15.0",
    "axios-case-converter": "^0.9.0",
    "core-js": "^3.19.2",
    "date-fns": "^2.25.0",
    "electron-positioner": "^4.1.0",
    "electron-store": "^8.0.1",
    "electron-updater": "^4.6.1",
    "hh-mm-ss": "^1.2.0",
    "i18next": "^21.5.4",
    "keytar": "^7.7.0",
    "lodash.debounce": "^4.0.8",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.2",
    "lodash.omit": "^4.5.0",
    "lodash.throttle": "^4.1.1",
    "mixpanel": "^0.14.0",
    "normalizr": "^3.6.1",
    "nuxt": "^2.15.8",
    "nuxt-i18n": "^6.28.1",
    "ress": "^4.0.0",
    "universal-analytics": "^0.5.1",
    "uuid": "^8.3.2",
    "v-tooltip": "2.1.3",
    "vue-feather-icons": "^5.1.0",
    "vue-timers": "^2.0.4",
    "vue2-animate": "^2.1.4"
  },
  "devDependencies": {
    "@doyensec/electronegativity": "^1.9.1",
    "@nuxtjs/style-resources": "^1.2.1",
    "@types/electron-positioner": "^4.1.0",
    "@types/hh-mm-ss": "^1.2.1",
    "@types/universal-analytics": "^0.4.5",
    "@types/uuid": "^8.3.3",
    "@types/webpack-env": "^1.16.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vue/test-utils": "^1.3.0",
    "axios-mock-adapter": "^1.20.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^27.3.1",
    "conf": "^10.0.3",
    "dotenv-webpack": "^7.0.3",
    "electron": "^16.0.2",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "electron-notarize": "^1.1.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-vue": "^8.1.1",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^12.1.2",
    "mockdate": "^3.0.5",
    "node-loader": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.3",
    "postcss-html": "^1.3.0",
    "postcss-scss": "^4.0.2",
    "prettier": "^2.5.1",
    "sass": "^1.43.5",
    "sass-loader": "^10.1.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.0",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "vue-jest": "^3.0.4",
    "vuex-mock-store": "^0.0.8",
    "wait-on": "^6.0.0",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0"
  }
}
